{{ stage }}:
  datasource_type: database
  database:
    endpoint: mysql://{{ secrets.db_user }}:{{ secrets.db_password }}@{{ secrets.db_host[stage] }}/{{ secrets.db_name }}?charset=utf8
    host: {{ secrets.db_host[stage] }}
    name: {{ secrets.db_name }}
    user: {{ secrets.db_user }}
    password: {{ secrets.db_password }}
    pool: 5
    pool_name: myope_learning
    retry_interval: 500
    max_retry: 5
  # dicdir: /usr/local/lib/mecab/dic/mecab-ipadic-neologd
  dicdir: /usr/local/lib/mecab/dic/ipadic/
