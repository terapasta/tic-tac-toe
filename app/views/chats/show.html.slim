- content_for :hide_global_header, true
- content_for :title, @bot.name

span(
  data-component="ChatApp"
  data-bot=DeepCamelizeKeys.deep_camelize_keys(PublicBotSerializer.new(@bot).as_json).to_json
  data-token=@bot.token
  data-is-admin=(current_user.present? && current_user.staff?).to_json
  data-is-manager=(current_user.present? && (current_user.normal? || current_user.staff?)).to_json
  data-flash-message=flash[:warning]
  data-is-guest-user-registration-enabled=@bot.enable_guest_user_registration.to_json
  data-is-guest-user-form-skippable=(!!@bot.try(:is_guest_user_form_skippable)).to_json
)
