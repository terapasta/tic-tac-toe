<% alert_types = { notice: :success, error: :danger, alert: :danger, warning: :warning } %>
<% alert_types.each do |flash_type, alert_type| %>
  <% if flash[flash_type] %>
    <div class="alert alert-main alert-dismissible alert-<%= alert_type %> <%= 'margin-top-50' if params[:token].present? %>">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= simple_format flash[flash_type] %>
    </div>
  <% end %>
<% end %>
